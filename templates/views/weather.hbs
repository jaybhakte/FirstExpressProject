<body>

    {{>navbar}}
    <!-- main-header -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main-content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your City Name" autocomplete="off">
                        <input type="submit" value="Search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInfromation">
                    <div class="top_layer">
                        <p id="day">Wednesday</p>
                        <p id="today_date">29 Sept</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output Here:</p>
                        <div class="middle_layer_data_hide">
                            <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fas fa-cloud"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer code -->
